<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color">

    <LinearLayout
        android:id="@+id/applogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="35dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:src="@drawable/logo300" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediWithU"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/main_toolbar_text"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="함께하는 복약 약속"
            android:textSize="18dp"
            android:textColor="@color/main_fab"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/startviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textColor="@color/white"
        android:backgroundTint="@color/main_fab"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:padding="15dp"
        android:layout_margin="15dp" />
</RelativeLayout>