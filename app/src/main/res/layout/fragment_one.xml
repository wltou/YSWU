<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/meditationUser"
        android:background="@color/splash_bg_color"
        android:layout_marginTop="15dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="환자 이름"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:backgroundTint="@color/main_btn"
            android:id="@+id/btnCall"
            android:drawableLeft="@drawable/call_resize"
            android:drawablePadding="8dp"
            android:text="전화"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:backgroundTint="@color/main_btn"
            android:id="@+id/btnMessage"
            android:drawableLeft="@drawable/message_resize"
            android:text="문자"
            android:textColor="@color/black"/>

    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/meditationUser"
        android:id="@+id/RecyclerView"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/main_fab"
        app:icon="@android:drawable/ic_input_add"
        android:textColor="@color/black"
        android:text="약 추가하기"/>

</RelativeLayout>