<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Profile">

        <EditTextPreference
            app:key="id"
            app:title="Your ID"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="email"
            app:title="Email"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="기타">
        <ListPreference
            app:defaultValue="#000000"
            app:entries="@array/my_color"
            app:entryValues="@array/my_color_values"
            app:key="color"
            app:title="My Background Color"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>